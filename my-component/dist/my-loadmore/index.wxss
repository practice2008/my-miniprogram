.con {
  position: relative;
  height: 1.875rem;
  line-height: 1.875rem;
  margin: 2.47rem auto;
  text-align: center;
}

.con .ii {
  display: block;
  height: 1px;
  background: #e1e1e1;
  position: absolute;
  top: 0.9rem;
  width: 100%;
}

.con .last {
  display: inline-block;
  font-size: 0.75rem;
  color: #c1c1c1;
  background: rgba(240, 240, 240, 1);
  padding: 0 1.875rem;
  text-align: center;
  margin: 0 auto;
  position: relative;
  z-index: 2;
}

.loadmore {
  display: flex;
  width: 100%;
  height: 92rpx;
  justify-content: center;
  align-items: center;
  /* background-color: red */
}

.loadmore__line {
  width: 100rpx;
  height: 1rpx;
  border-top: 1rpx solid #d2d2d2;
}

.loadmore__icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
}

.loadmore__text {
  margin: 0 16rpx 0 8rpx;
  color: #999;
  font-size: 28rpx;
}

.loadmore__wrap {
  color: #999;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loadmore__loading-icon {
  width: 30px;
  height: 30px;
  margin-right: 8px;
  display: inline-block;
  vertical-align: middle;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: url('https://s10.mogucdn.com/mlcdn/c45406/171016_4a61e09hcadd157gadhdeje55e82c_32x32.png') no-repeat;
  -webkit-background-size: 100%;
  background-size: 100%;
}

/* border-top:1rpx solid #d2d2d2;
 */

.loadmore__loading-text {
  display: inline-block;
  vertical-align: middle;
  margin-left: 8rpx;
}
