page {
  --red: #e54d42;
  --orange: #f37b1d;
  --yellow: #fbbd08;
  --olive: #8dc63f;
  --green: #39b54a;
  --cyan: #1cbbb4;
  --blue: #0081ff;
  --purple: #6739b6;
  --mauve: #9c26b0;
  --pink: #e03997;
  --brown: #a5673f;
  --grey: #8799a3;
  --gray: #aaa;
  --black: #333;
  --white: #fff;
  --gradualRed: linear-gradient(45deg, #f43f3b, #ec008c);
  --gradualOrange: linear-gradient(45deg, #ff9700, #ed1c24);
  --gradualGreen: linear-gradient(45deg, #39b54a, #8dc63f);
  --gradualPurple: linear-gradient(45deg, #9000ff, #5e00ff);
  --gradualPink: linear-gradient(45deg, #ec008c, #6739b6);
  --gradualBlue: linear-gradient(45deg, #0081ff, #1cbbb4);
}

.card {
  box-sizing: border-box;
  font-size: 12px;
  color: #333;
  background: #fafafa;
}

.card-flex {
  display: flex;
  padding: 5px 10px;
}

.card-flex .goods_image {
  width: 250rpx;
}

.card-flex .goods_info {
  flex: 1;
}

.card-flex .goods_info {
  padding-left: 10px;
}

.card-inline-block {
  display: inline-block;
  width: 50%;
  margin-bottom: 8px;
}

.goods_info {
  word-break: break-all;
  padding: 0 3px;
}

.goods_title {
  font-weight: 700;
  overflow: hidden;
  display: box;
  display: -webkit-box;
  text-overflow: ellipsis;
  line-clamp: 2;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  box-orient: vertical;
}

.description {
  color: #7d7e80;
  padding: 3px 0;
}

.description_hidden{
  height: 39rpx;
  overflow: hidden;
  text-overflow:ellipsis; 
  white-space: nowrap;
}

.goods_image image {
  width: 100%;
}

.price-info {
  display: flex;
}

.price-info>view:first-child {
  flex: 1;
}

.price-text {
  color: #f44;
  font-weight: 700;
  margin-right: 5px;
  font-size: 16px;
}

.otherPrice {
  text-decoration: line-through;
  color: #7d7e80;
  font-size: 10px;
}

.flex {
  display: flex;
}

.flex-wrap {
  flex-wrap: wrap;
}

.padding-sm {
  padding: 0rpx;
  margin: 0rpx;
}

.padding-xs {
  height: 1rpx;
}

.cu-tag {
  font-size: 24rpx;
  vertical-align: middle;
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0rpx 16rpx;
  height: 48rpx;
  font-family: Helvetica Neue, Helvetica, sans-serif;
  white-space: nowrap;
  top: 4.5rpx;
  left: -0.5rpx;
}

.cu-tag.circle {
  border-radius: 0 0.8em 0.8em 0;
}

