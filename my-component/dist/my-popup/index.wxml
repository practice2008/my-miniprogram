<view class="wx-popup" hidden="{{flag}}">
  <view class='popup-container'>
    <view class="wx-popup-title" style="border-bottom:2rpx solid {{line_color}};color:{{title_color}}" wx:if="{{title}}">{{title}}</view>
    <view class="wx-popup-con" >{{content}}</view>
    <view class="wx-popup-btn" >
      <text class="btn-no" bindtap='_error' wx:if="{{btn_no}}" style='color:{{err_bc}}'>{{btn_no}}</text>
      <text class="btn-ok" bindtap='_success' wx:if="{{btn_ok}}" style='color:{{suc_bc}}'>{{btn_ok}}</text>
    </view>
  </view>
</view>